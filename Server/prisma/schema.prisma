generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model College {
  id         Int     @id @default(auto_increment())
  name      String   @unique
  createdAt DateTime @default(mow())
  users     User[]
}

model User {
  id               Int    @id @default(auto_increment())
  name             String 
  enrollment       Int    @unique
  email            String @unique
  college College? relation(fields: [collegeId], references: [id])
  collegeId?
  password         String
  createdAt        @default(now())
}